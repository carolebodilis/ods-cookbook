@media (min-width: 700px) {
    aside {
        float: left;
        display: block;
        width: 320px;
        transition: all .25s ease-in-out;
    }
    aside.left+section {
        margin: 0 0 0 340px;
    }
    section {
        display: block;
        overflow: hidden;
        transition: all .25s ease-in-out;
    }
}

@media (max-width: 700px) {
    aside {
        display: block;
        transition: all .25s ease-in-out;
    }
    section {
        display: block;
        overflow: hidden;
        transition: all .25s ease-in-out;
    }
}

#counter {
    color: #004b96; // FIXME
    font-weight: bold;
    margin-bottom: 10px;
    font-size: 22px;
}

a.tooltip {outline:none; }
a.tooltip strong {
    line-height:30px;
}
a.tooltip:hover {text-decoration:none;}
a.tooltip span {
    z-index:10000;
    display:none;
    padding:14px 20px;
    margin-top:-30px;
    margin-left:10px;
    width:300px; line-height:18px;
}
a.tooltip span ul {
    list-style-type:none;
    padding: 0;
}
a.tooltip:hover span{
    display:inline;
    position:absolute;
    color:#004B96;
    border:1px solid #DCA;
    background:#fff;}
.callout {z-index:20;position:absolute;top:30px;border:0;left:-12px;}
/*CSS3 extras*/
a.tooltip span
{
    border-radius:4px;
    box-shadow: 3px 3px 6px #CCC;
}






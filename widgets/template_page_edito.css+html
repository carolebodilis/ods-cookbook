<ods-dataset-context context="context" context-dataset="donnees">
    <div id="page-layout-single-main">

        <aside class="left">
            <div class="whitebox">
                <div id="counter">
                    {{ context.nhits | number }}
                    <span ng-pluralize="" count="context.nhits" translate="when" when="{'0': 'résultat', '1': 'résultat', 'other': 'résultats'}">
                        jeu de données
                    </span>
                </div>
                <ods-filter-summary context="context"></ods-filter-summary>
                <h2>Recherche textuelle :</h2>
                <a href="#" class="tooltip">
                    Aide à la recherche
                    <span>
                        <strong>Fonctionnalité de recherche avancée :</strong><br />
                        <ul>
                            <hr/>
                            <li><strong>Recherche par identifiant</strong></li>
                            <li>De X: <code>X:"100"</code></li>
                            <li>De Y: <code>Y:"170300"</code></li>
                            <hr/>
                            <li><strong>Requête composée</strong></li>
                            <li>Ex. A et B: <code>A:O AND B:O</code></li>
                            <li>Ex. C et D: <code>C AND D:100</code>
                                <hr/>
                            <li><strong>Pour aller plus loin, cf. documentation "query language"</strong></li>
                            <li><code>(X:AB OR Y:AC) AND (A:O OR B:N) AND NOT C:Y</code></li>
                        </ul>
                    </span>
                </a>

                <ods-text-search
                                 button="Recherche"
                                 context="context">
                </ods-text-search>


                <h2>Filtres :</h2>
                <ods-facets context="context"></ods-facets>
            </div>
        </aside>

        <section>
            <div class="whitebox">
                <!-- ODS Widget here -->
            </div>
            <div class="whitebox">
                <!-- ODS Widget here -->
            </div>
        </section>
    </div>
</ods-catalog-context>